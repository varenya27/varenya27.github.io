---
const today = new Date();
import { Github, Linkedin, Mail, Chess } from "lucide-react"; // chess icon is custom
import { ExternalLink } from "lucide-react"; // optional fallback
---

<footer>
	&copy; {today.getFullYear()} Varenya Upadhyaya. All rights reserved.
	<div class="social-links">
      <!-- GitHub SVG -->
      <a href="https://github.com/username" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
        <svg class="w-6 h-6 text-gray-700 hover:text-gray-900" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 .296c-6.63 0-12 5.373-12 12 0 5.303 ..."/> <!-- truncated GitHub path -->
        </svg>
      </a>

      <!-- LinkedIn SVG -->
      <a href="https://www.linkedin.com/in/username" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
        <svg class="w-6 h-6 text-gray-700 hover:text-gray-900" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.25c-.966 0-1.75-.784-1.75-1.75s.784-1.75 1.75-1.75 1.75.784 1.75 1.75-.784 1.75-1.75 1.75zm13.5 11.25h-3v-5.5c0-1.379-1.121-2.5-2.5-2.5s-2.5 1.121-2.5 2.5v5.5h-3v-10h3v1.367c.87-1.204 2.297-2.367 4-2.367 2.481 0 4.5 2.019 4.5 4.5v6.5z"/>
        </svg>
      </a>

      <!-- Email SVG -->
      <a href="mailto:youremail@example.com" aria-label="Email">
        <svg class="w-6 h-6 text-gray-700 hover:text-gray-900" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 12.713l11.985-9.713h-23.97l11.985 9.713zm0 2.574l-12-9.287v13h24v-13l-12 9.287z"/>
        </svg>
      </a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: #E5DFCF;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>
